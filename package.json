{
	"name": "worklog",
	"displayName": "Worklog",
	"description": "Create a markdown file for worklog with pre-configured boilerplace content",
	"version": "0.2.2",
	"publisher": "chaturaloka",
	"icon": "worklog-md-icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/chaturaloka/vscode-worklog"
	},
	"engines": {
		"vscode": "^1.81.0"
	},
	"categories": [
		"Other"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.logWork",
				"title": "Create a Work log"
			},
			{
				"command": "extension.createBlogPost",
				"title": "Create a Blog Post"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "extension.logWork",
					"group": "2_workspace"
				},
				{
					"command": "extension.createBlogPost",
					"group": "2_workspace"
				}
			]
		},
		"configuration": [
			{
				"title": "WorkLog",
				"properties": {
					"WorkLog.plan": {
						"type": [
							"array",
							"null"
						],
						"default": [
							"# Plan for the day\n\n",
							"- [ ] Misc\n\n",
							"---\n\n",
							"## Misc\n\n",
							"---\n"
						],
						"description": "Specifies the content of the Plan for the day"
					}
				}
			},
			{
				"title": "BlogPost",
				"properties": {
					"BlogPost.template": {
						"type": [
							"array",
							"null"
						],
						"default": [
							"# Title\n\n",
							"## Introduction\n\n",
							"## Body\n\n",
							"## Conclusion\n\n",
							"## References\n\n"
						],
						"description": "Specifies the content of the Blog Post"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/minimatch": "^5.1.2",
		"@types/mocha": "^10.0.1",
		"@types/node": "^18.15.11",
		"@types/vscode": "^1.81.0",
		"@vscode/test-electron": "^2.3.0",
		"mocha": "^10.0.1",
		"tslint": "^5.20.1",
		"typescript": "^5.0.4"
	},
	"dependencies": {
		"chai": "^4.3.7"
	}
}
